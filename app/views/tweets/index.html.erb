<p id="notice"><%= notice %></p>

<h1>Tweets</h1>

<div class="row">
  <div class="col-xs-8 col-sm-10 col-md-10">
    <h1>Tweets</h1>
  </div>
  <div class="col-xs-4 col-sm-2 col-md-2">
    <%= link_to 'New Tweet', new_tweet_path, class: "btn btn-info btn-sm" %>
  </div>
</div>
​
<div class="row">
  <% @tweets.reverse.each do |tweet| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <%= link_to(image_tag(tweet.image), tweet) if tweet.image? %>
        <div class="caption">
          <h3><%= tweet.user_id %></h3>
          <small><%= time_ago_in_words(tweet.created_at) %> ago</small>
          <p><%= tweet.content.truncate(150)  %></p>
          <p><%= link_to 'Show', tweet, class: "btn btn-primary" %> <%= link_to 'Edit', edit_tweet_path(tweet), class: "btn btn-warning" %> <%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
